<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">
            <i class="fas fa-utensils"></i>
            <% if(restaurant[0]){ %> <%= `Reviews for ${restaurant[0].name}` %>
            <% }else{ %> <%= "No Reviews" %> <% } %>

            <i class="fas fa-utensils"></i>
          </div>
          <% if (locals.restaurant) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>Review</th>
                  <th>By</th>
                  <th>Rating</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < restaurant.length; i++) { %>
              <tr>
                <td><%= restaurant[i].details %></td>
                <td><%= restaurant[i].reviewer_name %></td>
                <td>
                  <% let j=0; %> <% for(j=0; j < restaurant[i].rating; j++) { %>
                  <span class="icon is-small">
                    <i class="fas fa-star"></i>
                  </span>
                  <% } %>
                </td>
                <td>
                  <a
                    href="/deleteReview?id=<%= restaurantID %>&review=<%= restaurant[i].details %>&reviewerName=<%= restaurant[i].reviewer_name %>&rating=<%= restaurant[i].rating %>"
                  >
                    <span class="icon is-small">
                      <i class="fas fa-trash-alt"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="4">There are <%= i %> reviews.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>

          <form action="addReview" id="review-form" method="post">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add New Review</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input
                      type="hidden"
                      name="id"
                      value="<%= restaurantID %>"
                    />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input
                      name="name"
                      class="input"
                      type="text"
                      placeholder="Your Name"
                      required
                    />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <textarea
                      name="review"
                      class="input"
                      type="text"
                      form="review-form"
                      placeholder="Review"
                    ></textarea>
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <!-- <input
                      name="rating"
                      class="input"
                      type="text"
                      placeholder="Rating from 0 to 5"
                      required
                    ></input> -->
                    <select name="rating" from="review-form" class="input">
                      <option value="" disabled selected hidden>
                        Rate the Restaurant â–¼
                      </option>
                      <option value="1">&#9733;</option>
                      <option value="2">&#9733;&#9733;</option>
                      <option value="3">&#9733;&#9733;&#9733;</option>
                      <option value="4">&#9733;&#9733;&#9733;&#9733;</option>
                      <option value="5">
                        &#9733;&#9733;&#9733;&#9733;&#9733;
                      </option>
                    </select>
                  </p>
                </div>
                <div class="field">
                  <button
                    type="submit"
                    form="review-form"
                    class="button is-link"
                    style="padding-right: 2rem"
                  >
                    <span>Add</span>
                    <span class="icon is-small" style="padding-left: 4px">
                      <i class="fas fa-star-half-alt"></i>
                      <i class="fas fa-plus" style="padding-left: 2px"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
    <form action="/" id="back"></form>
    <button type="submit" form="back" class="button is-link" style="left: 20%">
      Back to restaurants
    </button>
  </body>
</html>
